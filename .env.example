# FIX Hub Docker Configuration
# Copy to .env and customize as needed

# Docker container settings
CONTAINER_NAME=fixhub
IMAGE_NAME=fixhub
IMAGE_TAG=latest

# Port mapping (host:container)
PORT=8080

# Java / Application settings
JAVA_OPTS=-Xmx512m -Xms256m

# JWT Configuration
APP_JWT_SECRET=fix-hub-secret-key-please-change-in-production-at-least-32-chars-long
APP_JWT_EXPIRATION=86400000

# FIX Configuration
FIXHUB_CONFIG_PATH=/app/conf/fixhub.yml
FIXHUB_CONNECTIONS_FILE=/app/conf/connections.json

# Logging
LOG_LEVEL=INFO
